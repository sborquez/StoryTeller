    "version": "0.2.0",
    "configurations": [
        {
            "name": "Play CLI",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "module": "story_teller.app.cli",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "STORYTELLER_DEBUG": "true",
                "STORYTELLER_CONFIG_FILE": "config.ini",
                "LANGCHAIN_TRACING_V2": "false",
                "LANGCHAIN_ENDPOINT": "https://api.smith.langchain.com"
            }
        }
    ]
